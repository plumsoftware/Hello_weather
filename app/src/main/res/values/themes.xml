<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.ПриветПогода" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">true</item>

        <item name="android:textViewStyle">@style/PrimaryText</item>

        <!--        <item name="android:textColor">@android:color/primary_text_light</item>-->
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>

        <item name="iconPrimaryColor">#000</item>

        <item name="ripplePrimaryColor">#4D000000</item>
    </style>

    <style name="PrimaryText" parent="Widget.AppCompat.TextView">
        <item name="color">#000</item>
        <item name="rippleColor">#4D000000</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeadlineText" parent="Widget.AppCompat.TextView">
        <item name="color">#000</item>
        <item name="rippleColor">#4D000000</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeadlineText2" parent="Widget.AppCompat.TextView">
        <item name="color">#000</item>
        <item name="rippleColor">#4D000000</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="HeadlineText3" parent="Widget.AppCompat.TextView">
        <item name="color">#000</item>
        <item name="rippleColor">#4D000000</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">52sp</item>
    </style>

    <style name="HeadlineTextWidget1" parent="Widget.AppCompat.TextView">
        <item name="color">#000</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="HeadlineTextWidget2" parent="Widget.AppCompat.TextView">
        <item name="color">#777680</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="minHeight">?attr/actionBarSize</item>
        <item name="theme">?attr/actionBarTheme</item>
        <item name="android:elevation">8dp</item>
        <item name="backgroundColor">?android:attr/colorBackground</item>
        <item name="titleTextColor">#000</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PrimaryToolbar" parent="Widget.Material3.Toolbar">
        <item name="minHeight">?attr/actionBarSize</item>
        <item name="theme">?attr/actionBarTheme</item>
        <item name="backgroundColor">?android:attr/colorBackground</item>
        <item name="titleTextColor">@color/green</item>
        <item name="android:elevation">8dp</item>
        <item name="android:gravity">center|start</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PrimaryToolbar2" parent="Widget.Material3.Toolbar">
        <item name="minHeight">?attr/actionBarSize</item>
        <item name="theme">?attr/actionBarTheme</item>
        <item name="backgroundColor">?android:attr/colorBackground</item>
        <item name="titleTextColor">#000</item>
        <item name="android:gravity">center|start</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.ПриветПогода.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="AppTheme.ПриветПогода.AppWidgetContainer" parent="AppTheme.ПриветПогода.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>
